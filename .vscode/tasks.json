{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run with inp.txt",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "g++ -std=c++17 -Wall '${file}' -o '${fileBasenameNoExtension}.exe'; if ($?) { .\\${fileBasenameNoExtension}.exe < inp.txt }"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile the current C++ file and run it with inp.txt"
        }
    ]
}

