{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ and Clean",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Compile and run C++ and delete the .exe",
      "dependsOn": ["Run Program"]
    },
    {
      "label": "Run Program",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "${fileDirname}\\${fileBasenameNoExtension}.exe && del ${fileDirname}\\${fileBasenameNoExtension}.exe"
      ]
    }
  ]
}
